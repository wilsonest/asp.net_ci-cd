@model IEnumerable<CargaFiles.Models.Usuarios>
@{
    ViewBag.Title = "AgregarUsuarios";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
</head>
<body>

    <div>
        <div class="col-sm-12">

            <div class="panel panel-primary" style="margin-top:50px">
                <div class="panel-heading">
                    <h4>Agregar Usuario</h4>
                </div>
                <div class="panel-body">
                    <form action="@Url.Action("AgregarUsuario","Acceso")" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            <label>Nombre:</label>
                            <input class="form-control" name="nombre" type="text" autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <label>Correo:</label>
                            <input class="form-control" name="correo" type="email" autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <label>Clave:</label>
                            <input class="form-control" name="clave" type="password" autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <label>Id:</label>
                            <input class="form-control" name="id" type="number" autocomplete="off" />
                        </div>
                        @*@foreach (CargaFiles.Models.Usuarios item in Model)
        {


            <option value="@Usu">@categoria.CategoriasNombre</option>                }

        }*@


                        <button class="btn btn-success" type="submit">Guardar</button>
                        <a class="btn btn-warning" href="@Url.Action("Inicio","Acceso")">Volver</a>
                    </form>
                </div>

            </div>

        </div>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>