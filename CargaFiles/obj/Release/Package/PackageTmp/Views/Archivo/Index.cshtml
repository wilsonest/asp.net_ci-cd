@model IEnumerable<CargaFiles.Models.Archivos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <div class="col-sm-12">

        <div class="panel panel-primary" style="margin-top:50px">
            <div class="panel-heading">
                <h4>Lista Archivos</h4>
            </div>
            <div class="panel-body">
               <a class="btn btn-success" href="@Url.Action("Subir","Archivo")">Subir Archivo</a>

                <hr />

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Tipo</th>
                                <th>Imagen</th>
                                <th style="width:100px"></th>

                            </tr>
                        </thead>
                        <tbody>
   
                        @foreach (CargaFiles.Models.Archivos item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Extension.Replace(".", "")</td>
                                @*mostrar imagen*@
                            <td>
                                <img src="@Url.Action("Mostrar", "Archivo", new { IdArchivo = item.IdArchivo })"width="40">
                            
                            </td>
                            <td>
                                <form action="@Url.Action("DescargarArchivo","Archivo")" method="post">
                                    <input type="hidden" name="IdArchivo" value="@item.IdArchivo" />
                                    <button class="btn btn-danger btn-sm" type="submit">Descarga</button>
                                </form>
                                <form action="@Url.Action("Delete","Archivo")" method="post">
                                    <input type="hidden" name="IdArchivo" value="@item.IdArchivo" />
                                    <button class="btn btn-danger btn-sm" type="submit">Eliminar</button>
                                </form>
                            </td>

                            </tr>

                        }

                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>
</div>
